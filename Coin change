#include <iostream>

using namespace std;

int main() {
    // Denominations available and their quantities
    int denominations[] = {50, 100, 500, 1000, 5000};
    int quantity[] = {6, 10, 10, 10, 10};

    // Amount paid and change to be given
    int amountPaid = 2000; // 20 rupees
    int change = 1250;     // 12 rupees and 50 paise

    cout << "Customer choice: More quantity (1) or less quantity (2): ";
    int customerChoice;
    cin >> customerChoice;

    cout << "Change breakdown:\n";

    for (int i = 4; i >= 0; i--) {
        int count = min(change / denominations[i], quantity[i]);
        if (count > 0) {
            cout << "Number of " << denominations[i] / 100 << " rupee ";
            if (denominations[i] == 50) cout << "coin(s): ";
            else cout << "note(s): ";
            cout << count << "\n";
            change -= count * denominations[i];
            quantity[i] -= count;
        }
    }

    return 0;
}
